<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="800.0" prefWidth="1200.0" spacing="20.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ForgotPasswordController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <VBox maxWidth="-Infinity" prefHeight="332.0" prefWidth="202.0" spacing="5">
        <Label text="Username" />
        <TextField fx:id="usernameField" maxWidth="200" />

        <Label fx:id="emailLabel" text="Email">
         <padding>
            <Insets top="8.0" />
         </padding></Label>
        <TextField fx:id="emailField" maxWidth="200" />

        <Label fx:id="ssnLabel" text="SSN">
         <padding>
            <Insets top="8.0" />
         </padding></Label>
        <TextField fx:id="ssnField" maxWidth="200" />

        <VBox spacing="5">
            <padding>
                <Insets top="10" />
            </padding>
            <Label text="Security Question" />
            <Text fx:id="securityQuestion" style="-fx-font-size: 12" text="What is your favorite animal?">
            <VBox.margin>
               <Insets left="4.0" />
            </VBox.margin></Text>
            <TextField fx:id="securityQuestionField" maxWidth="200" />
        </VBox>

        <VBox>
            <padding><Insets top="20" /></padding>
            <Label fx:id="newPasswordLabel" maxWidth="200" text="Create New Password" />
            <TextField fx:id="newPasswordField" maxWidth="200">
            <VBox.margin>
               <Insets top="3.0" />
            </VBox.margin></TextField>
        </VBox>

        <StackPane>
            <padding><Insets bottom="10" top="15" /></padding>
            <Label fx:id="securityQuestionErrorLabel" style="-fx-text-fill: red;" wrapText="true" />
            <Label fx:id="ssnErrorLabel" style="-fx-text-fill: red;" wrapText="true" />
        </StackPane>

    </VBox>
   <VBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="98.0" prefWidth="153.0" spacing="8.0">
      <children>
            <Button alignment="CENTER" contentDisplay="BOTTOM" graphicTextGap="6.0" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" onAction="#handlePasswordReset" text="Reset Password" />
            <Button fx:id="returnButton" alignment="CENTER" maxWidth="1.7976931348623157E308" onAction="#handleReturn" prefHeight="20.0" prefWidth="153.0" text="Return to Main Menu">
            <VBox.margin>
               <Insets top="2.0" />
            </VBox.margin>
         </Button>
      </children>
   </VBox>

</VBox>
