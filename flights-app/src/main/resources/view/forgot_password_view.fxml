<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="800.0" prefWidth="1200.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ForgotPasswordController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <VBox maxWidth="200" spacing="5">
        <Label text="Username" />
        <TextField fx:id="usernameField" maxWidth="200" />

        <Label text="Email" fx:id="emailLabel" />
        <TextField fx:id="emailField" maxWidth="200"/>

        <Label text="SSN" fx:id="ssnLabel"/>
        <TextField fx:id="ssnField" maxWidth="200"/>

        <VBox spacing="5">
            <padding>
                <Insets top="10" />
            </padding>
            <Label text="Security Question" />
            <Text fx:id="securityQuestion" style="-fx-font-size: 12" text="What city were you born in?" />
            <TextField fx:id="securityQuestionField" maxWidth="200" />
        </VBox>

        <Pane>
            <padding><Insets top="20" bottom="10"/></padding>
            <Label fx:id="securityQuestionErrorLabel" style="-fx-text-fill: red;"/>
            <Label fx:id="ssnErrorLabel" style="-fx-text-fill: red;"/>
        </Pane>

        <VBox spacing="10">
            <padding><Insets bottom="10" top="20" /></padding>
            <Button text="Reset Password" onAction="#handlePasswordReset" />
            <Button fx:id="returnButton" onAction="#handleReturn" text="Return to Main Menu" />
        </VBox>

    </VBox>

</VBox>
