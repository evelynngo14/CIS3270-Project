<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.AdminDashboardController"
      alignment="CENTER"
      spacing="20.0"
      prefHeight="800.0"
      prefWidth="1200.0">

    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <children>

        <!-- welcomeLabel -->
        <Label fx:id="welcomeLabel" />

        <Separator />

        <!-- flightTable -->
        <TableView fx:id="flightTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="flightIdCol" text="Flight ID" />
                <TableColumn fx:id="departureCityCol" text="Departure City" prefWidth="150.0" />
                <TableColumn fx:id="arrivalCityCol" text="Arrival City" prefWidth="150.0" />
                <TableColumn fx:id="departureTimeCol" text="Departure Time" prefWidth="150.0" />
                <TableColumn fx:id="arrivalTimeCol" text="Arrival Time" prefWidth="150.0" />
                <TableColumn fx:id="capacityCol" text="Capacity" />
                <TableColumn fx:id="bookedSeatsCol" text="Booked Seats" />
            </columns>
        </TableView>

        <!-- buttons HBox -->
        <HBox alignment="CENTER" spacing="20.0">
            <Button fx:id="addFlightButton"
                    text="Add Flight"
                    onAction="#handleAddFlight"/>
            <Button fx:id="logoutButton"
                    text="Logout"
                    onAction="#handleLogout"/>
        </HBox>

    </children>
</VBox>
