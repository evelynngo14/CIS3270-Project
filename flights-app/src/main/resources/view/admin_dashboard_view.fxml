<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="800.0" prefWidth="1200.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AdminDashboardController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <children>

        <!-- welcomeLabel -->
        <Label fx:id="welcomeLabel" text="Admin Dashboard" />

        <Separator />

        <!-- flightTable -->
        <TableView fx:id="flightsTable" prefHeight="561.0" prefWidth="1160.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="flightIdCol" text="Flight ID" />
                <TableColumn fx:id="departureCityCol" prefWidth="150.0" text="Departure City" />
                <TableColumn fx:id="arrivalCityCol" prefWidth="150.0" text="Arrival City" />
                <TableColumn fx:id="departureTimeCol" prefWidth="150.0" text="Departure Time" />
                <TableColumn fx:id="arrivalTimeCol" prefWidth="150.0" text="Arrival Time" />
                <TableColumn fx:id="capacityCol" text="Capacity" />
                <TableColumn fx:id="bookedSeatsCol" text="Booked Seats" />
            </columns>
        </TableView>

        <!-- buttons HBox -->
        <HBox alignment="CENTER" spacing="20.0">
            <Button fx:id="addFlightButton" onAction="#handleAddFlight" text="Add Flight" />
            <Button fx:id="deleteFlightButton" mnemonicParsing="false" onAction="#handleDeleteFlight" text="Delete Flight" />
            <Button fx:id="updateFlightButton" onAction="#handleUpdateFlights" text="Update Flight" />
            <Button fx:id="logoutButton" onAction="#handleLogout" text="Logout" />

        </HBox>

    </children>
</VBox>
