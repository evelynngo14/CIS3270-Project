<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" minHeight="800.0" minWidth="1200.0" spacing="10.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="controller.AddFlightController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Departure City" />
    <TextField fx:id="departureCityField" maxWidth="200.0" />

    <Label text="Arrival City" />
    <TextField fx:id="arrivalCityField" maxWidth="200.0" />

    <HBox alignment="CENTER" spacing="20">
        <VBox spacing="5">
            <Label text="Departure Date" />
            <DatePicker fx:id="departureDatePicker" />
        </VBox>

        <VBox spacing="5">
            <Label text="Departure Time" />
            <ChoiceBox fx:id="departureTimeChoice" maxWidth="100.0" />
        </VBox>
    </HBox>

    <HBox alignment="CENTER" spacing="20">
        <VBox spacing="5">
            <Label text="Arrival Date" />
            <DatePicker fx:id="arrivalDatePicker" />
        </VBox>
        <VBox spacing="5">
            <Label text="Arrival Time" />
            <ChoiceBox fx:id="arrivalTimeChoice" maxWidth="100.0" />
        </VBox>
    </HBox>

    <Label text="Capacity" />
    <TextField fx:id="capacityField" maxWidth="50.0" />

    <HBox alignment="CENTER" spacing="10.0">
        <padding><Insets top="20" /></padding>
        <Button fx:id="addFlightButton" onAction="#handleAddFlight" text="Add Flight" />
        <Button fx:id="cancelButton" onAction="#handleCancel" text="Cancel" />
    </HBox>
</VBox>
