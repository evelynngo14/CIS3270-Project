<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.LoginController">
    <children>
        <Label layoutX="50" layoutY="30" text="Username:" />
        <TextField fx:id="usernameField" layoutX="150" layoutY="30" />

        <Label layoutX="50" layoutY="70" text="Password:" />
        <PasswordField fx:id="passwordField" layoutX="150" layoutY="70" />

        <Button layoutX="150" layoutY="110" text="Login" onAction="#handleLogin" />

        <Label fx:id="statusLabel" layoutX="150" layoutY="150" text="" />
    </children>
</AnchorPane>