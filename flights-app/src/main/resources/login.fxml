<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="380.0" prefWidth="451.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
    <children>
      <GridPane layoutX="50.0" layoutY="30.0" prefHeight="95.0" prefWidth="247.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="0.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
              <Label text="Username:" />
              <TextField fx:id="usernameField" GridPane.columnIndex="2" />
      
              <Label text="Password:" GridPane.rowIndex="1" />
              <PasswordField fx:id="passwordField" GridPane.columnIndex="2" GridPane.rowIndex="1" />
      
              <Button onAction="#handleLogin" text="Login" GridPane.columnIndex="2" GridPane.rowIndex="2" />
      
              <Label fx:id="statusLabel" text="" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         </children>
      </GridPane>
    </children>
   <padding>
      <Insets right="20.0" />
   </padding>
</AnchorPane>
